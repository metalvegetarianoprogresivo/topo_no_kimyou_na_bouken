script/source = "extends KinematicBody2D

onready var bala = preload(\"res://balajugador.tscn\")
onready var bala2 = preload(\"res://balajugador2.tscn\")

var mover = Vector2()
const SALTO = Vector2(0, -1)
const GRAVEDAD = 20
const VEL = 300
const ALTURA_SALTO = -600
const saltoAlto = -400
var b
var c
var disparando = 0
signal cambiovida(new_value)
signal player_is_dead
export var vida: = 100
var stun = false
var doble_salto = 2
var cuentasalto = 0
var direccion = true
# Called when the node enters the scene tree for the first time.
func _ready():
	pass

func _physics_process(_delta):
	moverse()
	puntosvida()
	piso()

#afecta la gravedad al player
func piso():
	pass
#se elige la animacion que se va a reproducir
func animacion():
	var anima
	if is_on_floor():
		if abs(mover.x) > 0.1:
			#animacion corriendo
			anima = \"correr\"
		else:
			#animacion parado
			anima = \"parado\"
	else:
		#animacion cayendo
		if mover.y > 0:
			anima = \"cayendo\"
		else:
			#animacion saltando
			anima = \"salto\"
	if disparando == 1:
		anima = \"disparo\"
		disparando = 0
	
	if stun == true:
			anima = \"golpe\"
	return anima
	#funcion que mueve al personaje
func moverse():
	mover.y += GRAVEDAD
	
	if stun == false:
		if Input.is_action_pressed(\"ui_right\"):
			mover.x = VEL
			direccion = true
			$AnimatedSprite.flip_h = false
			#$AnimatedSprite.animation = \"correr\"
		elif Input.is_action_pressed(\"ui_left\"):
			mover.x = -VEL
			direccion = false
			$AnimatedSprite.flip_h = true
			#$AnimatedSprite.animation = \"correr\"
		else:
			#$AnimatedSprite.animation = \"parado\"
			mover.x = 0
		
		if Input.is_action_just_pressed(\"shoot\"):
			
			
			if direccion == true:
					
				b = bala.instance()
				get_parent().add_child(b)
				b.global_position = $bala1.global_position
				disparando = 1

			else:
				c = bala2.instance()
				get_parent().add_child(c)
				c.global_position = $bala2.global_position
				disparando = 1

		
		if is_on_floor():
			cuentasalto = 0
			
		if doble_salto > cuentasalto and Input.is_action_just_pressed(\"salto\"):
			#$AnimatedSprite.animation = \"parado\"
			mover.y = ALTURA_SALTO
			cuentasalto += 1
		
		
					
	mover = move_and_slide(mover, SALTO)
	$AnimatedSprite.animation = animacion()
	$AnimatedSprite.play()
	pass


#se modifica la vida
func puntosvida():
	if Input.is_action_just_pressed(\"ui_end\"):
		self.vida += 20
		emit_signal(\"cambiovida\", vida)
#se emite la seÃ±al para modificar la vida
#func _set_healt(new_value : int):
	#emit_signal(\"cambiovida\", vida)




#CUANDO PLAYER entra en contacto con el enemogo
func _on_Area2D_area_entered(area):
	print(area)
	stun = true
	self.vida -= 19
	emit_signal(\"cambiovida\", vida)
	modulate = Color.red
	if vida >= 1:

		if $AnimatedSprite.flip_h == false:
			print(mover.x)
			mover.x = -VEL * 2
			#mover.y = ALTURA_SALTO
			print(mover.x)
		else:
			mover.x = +VEL * 2
			#mover.y = ALTURA_SALTO
		#move_and_slide(mover, SALTO)
		$stun.start()
	else:
		muerto()
		
func muerto():
	emit_signal(\"player_is_dead\")
	print(\"muerto\")
	queue_free()


func _on_stun_timeout():
	stun = false
	modulate = Color(\"ffffff\")



